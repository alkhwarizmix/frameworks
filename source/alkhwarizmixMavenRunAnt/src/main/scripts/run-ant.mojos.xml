<pluginMetadata>
	<mojos>
		<mojo>
			<goal>run</goal>

			<!-- this element refers to the Ant target we'll invoke -->
			<call>run</call>
			<description>
				Run Ant Script
			</description>

			<parameters>
				<parameter>
					<name>filename</name>
					<property>dz.alkhwarizmix.run-ant.filename</property>
					<required>true</required>
					<expression>filename</expression>
					<type>java.lang.String</type>
					<description>Ant Script file to run</description>
				</parameter>

				<parameter>
					<name>version</name>
					<property>dz.alkhwarizmix.run-ant.version</property>
					<required>true</required>
					<expression>version</expression>
					<type>java.lang.String</type>
					<description>Ant Version to use (ex: 1.9.3)</description>
				</parameter>

				<parameter>
					<name>target</name>
					<property>dz.alkhwarizmix.run-ant.target</property>
					<required>true</required>
					<expression>target</expression>
					<type>java.lang.String</type>
					<description>Ant Script target to run</description>
				</parameter>

				<parameter>
					<name>param1</name>
					<property>dz.alkhwarizmix.run-ant.param1</property>
					<required>false</required>
					<expression>param1</expression>
					<type>java.lang.String</type>
					<description>Ant Script Param1</description>
				</parameter>
			</parameters>
		</mojo>
	</mojos>
</pluginMetadata>