<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>dz.alkhwarizmix</groupId>
		<artifactId>alkhwarizmix-common</artifactId>
		<version>0.5.12.FBEL</version>
	</parent>

	<groupId>dz.alkhwarizmix</groupId>
	<artifactId>Install-PureMVC_AS3_MultiCore_Framework</artifactId>
	<version>0.5.12.FBEL</version>
	<name>Install-PureMVC_AS3_MultiCore_Framework Maven</name>

	<dependencies>
		<dependency>
			<groupId>org.apache.ant</groupId>
			<artifactId>ant-launcher</artifactId>
			<version>1.9.3</version>
		</dependency>
		<dependency>
			<groupId>org.apache.ant</groupId>
			<artifactId>ant</artifactId>
			<version>1.9.3</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>dz.alkhwarizmix</groupId>
				<artifactId>run-ant</artifactId>
				<version>1.0.2</version>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<dz.alkhwarizmix.run-ant.filename>download.ant.build.xml</dz.alkhwarizmix.run-ant.filename>
							<dz.alkhwarizmix.run-ant.version>1.9.3</dz.alkhwarizmix.run-ant.version>
							<dz.alkhwarizmix.run-ant.target>download</dz.alkhwarizmix.run-ant.target>
							<dz.alkhwarizmix.run-ant.param1>https://github.com/PureMVC/puremvc-as3-multicore-framework/raw/master/bin/PureMVC_AS3_MultiCore_1_0_5.swc</dz.alkhwarizmix.run-ant.param1>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
