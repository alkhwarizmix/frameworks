<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>dz.alkhwarizmix</groupId>
		<artifactId>alkhwarizmix-common</artifactId>
		<version>1.0.5.6</version>
	</parent>

	<groupId>dz.alkhwarizmix</groupId>
	<artifactId>Install-as3crypto</artifactId>
	<version>1.0.5.6</version>
	<name>Install-as3crypto Maven</name>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>default-cli</id>
						<configuration>
							<target>
								<!-- download file -->
								<copy todir="${project.build.directory}/download/" flatten="true">
									<resources>
										<url url="https://as3crypto.googlecode.com/files/as3crypto.swc" />
									</resources>
								</copy>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
